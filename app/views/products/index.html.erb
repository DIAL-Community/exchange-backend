<p id="notice"><%= notice %></p>

<div class="float-right" style="padding-bottom: 1rem; ">
  <%= form_tag(products_path, :method => "get", id: "search-form", class: "form-inline") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search products ...", :class => "form-control" %>
  <div class="input-group-append">
    <%= submit_tag "Search", :class => "btn btn-primary" %>
  </div>
<% end %>
</div>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @products.count > 0 %>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.slug %></td>
          <td><%= product.website %></td>
          <td class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Action</a>
            <div class="dropdown-menu">
              <%= link_to 'Show', product, :class =>"dropdown-item"  %>
              <%= link_to 'Edit', edit_product_path(product), :class =>"dropdown-item"  %>
              <div class="dropdown-divider"></div>
              <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"dropdown-item"  %>
            </div>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4">
          <small class="text-muted">
            We couldn't find product matching to the search phrase. Do you want to <%= link_to 'create new product?', new_product_path %>
          </small>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @locations, :class => "apple-pagination" %>
