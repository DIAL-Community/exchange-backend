<div class="card-deck mt-2">
  <div class="card">
      <h5 class="card-header bg-secondary text-white"><%= t('view.product.form.digisquare-maturity') %></h5>
      <div class="card-body text-center">
        <% if !@product.product_assessment.nil? and @product.product_assessment.has_digisquare %>
          <% @digisquare_maturity.each do |digisquare_maturity_category| %>
            <div class="digisquare-gauge">
             <div class="needle" style="transform: rotate(<%= 90 + 18*(@product.maturity_scores[digisquare_maturity_category['core']])%>deg)"></div>
            </div>
            <br clear="both"/>
            <small><%= digisquare_maturity_category['core'] %>:<%= @product.maturity_scores[digisquare_maturity_category['core']] %></small>
            <br clear="both"/>
          <% end %>
        <% else %>
          <p class="card-text text-muted">
            <%= t('view.product.show.no-digisquare-eval') %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="card">
      <h5 class="card-header bg-secondary text-white"><%= t('view.product.form.osc-maturity') %></h5>
      <div class="card-body">
        <% if !@product.product_assessment.nil? and @product.product_assessment.has_osc %>
          <small>
          <ul>
            <% @osc_maturity.each do |osc_maturity| %>
              <li>
                  <strong><%= osc_maturity["header"] %></strong>:
                  <big><%= @product.maturity_scores[osc_maturity['header']]['score'] %></big> /
                  <%= @product.maturity_scores[osc_maturity['header']]['total'] %>
              </li>
            <% end %>
          </ul>
          </small>
        <% else %>
          <p class="card-text text-muted">
            <%= t('view.product.show.no-osc-eval') %>
          </p>
        <% end %>
      </div>
    </div>
</div>

<div class="card-deck mt-2">
  <div class="card">
    <h5 class="card-header bg-secondary text-white">
        <%= t('view.product.show.cost-data') %>
    </h5>
    <div class="card-body">
      <% if @product.code_lines.nil? && @product.cocomo.nil? && @product.est_hosting.nil? && @product.est_invested.nil? %>
        <p class="card-text text-muted">
          <%= t('view.product.show.no-cost-data') %>
        </p>
      <% else %>
        <div class="row">
          <div class="col-5 col-xs-12 mt-3">
            <div class="text-muted"><%= t('view.product.show.code-lines') %></div>
            <h4 class="ml-4"><%= @product.code_lines %></h4>
          </div>
          <div class="col-6 col-xs-12 mt-3" data-toggle="tooltip" data-placement="top" data-original-title="<%= t('view.product.show.cocomo') %>">
            <div class="text-muted"><%= t('view.product.show.est-effort') %>
              <i class="fas fa-info-circle ml-1"></i>
            </div>
            <h4 class="ml-4"><%= @product.cocomo %></h4>
          </div>
        </div>
        <% if !@product.est_hosting.nil? || !@product.est_invested.nil? %>
          <div class="row">
            <div class="col-5 col-xs-12 mt-3">
              <div class="text-muted"><%= t('view.product.show.est-hosting') %></div>
              <h4 class="ml-4"><%= @product.est_hosting %></h4>
            </div>
            <div class="col-6 col-xs-12 mt-3">
              <div class="text-muted"><%= t('view.product.show.est-invested') %></div>
              <h4 class="ml-4"><%= @product.est_invested %></h4>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="card">
    <h5 class="card-header bg-secondary text-white">
        <%= t('view.product.show.auto-launch') %>
    </h5>
    <div class="card-body">
      <% if @product.is_launchable %>
        <div id="launchdata">
        <%= render partial: "launch" %>
        </div>
      <% else %>
        <p class="card-text text-muted">
          <%= t('view.product.show.not-auto-launch') %>
        </p>
      <% end %>
    </div>
  </div>
</div>

