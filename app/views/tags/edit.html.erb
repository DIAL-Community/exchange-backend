      <%= t('view.general.error', count: @tag.errors.count) %>
    </div>
  </div>
<% end %>
<div class="border rounded bg-secondary text-white p-3">
  <%= t('view.general.title.edit', model: t('model.use-case-step')) %>
</div>
<%= render 'form', tag: @tag %>
