<% base_path = Rails.env.production? ? '/admin/' : '' %>
<div class="card mt-2">
  <div class="card-body py-3 px-3">
    <div>
      <%= link_to(base_path + tag_path(tag)) do %>
        <%= "#{tag.name}" %>
      <% end %>
    </div>
    <div id="<%= tag.slug %>" class="wysiwyg-viewer">
        <%= tag.tag_descriptions.select { |desc| desc.locale == I18n.locale.to_s }.first && tag.tag_descriptions
        .select { |desc| desc.locale == I18n.locale.to_s }
        .first
        .description
        .html_safe %>
    </div>
    <p class="float-right mb-0">
      <% if user_signed_in? && policy(tag).mod_allowed? %>
        <%= link_to t('view.general.edit'), base_path + edit_tag_path(tag), :class => "card-link" %>
      <% end %>
    </p>
  </div>
</div>
