<p class="text-success"><%= flash[:notice] %></p>
<p class="text-danger"><%= flash[:error] %></p>
<div class="card">
  <div class="card-header bg-secondary text-white"><%= @contact.name %></div>
  <div class="card-body py-2">
    <div class="text-muted"><%= @contact.email %></div>
    <% if @contact.title %>
      <div class="card-text"><%= @contact.title %></div>
    <% end %>
    <div class="float-right" >
      <%= link_to t('view.general.back'), contacts_path, :class => "card-link" %>
      <%= link_to t('view.general.edit'), edit_contact_path(@contact), :class => "card-link" %>
    </div>
  </div>
</div>

<div class="mt-4">
  <div class="rounded bg-secondary text-white card-header">
    <%= t('model.organization').to_s.humanize %>
  </div>
  <% if @contact.organizations.count > 0 %>
    <div class="row">
      <% @contact.organizations.each.with_index do |organization, index| %>
        <div class="col-6 col-lg-4 mt-2">
          <div class="card h-100">
            <div class="card-body py-2">
              <div class="card-title"><%= link_to organization.name, organization %></div>
              <div class="card-subtitle text-muted"><%= organization.website %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="card-text text-muted">
      <%= t('view.general.not-available', model: t('model.contact'), multi: t('model.organization').to_s.pluralize) %>
    </p>
  <% end %>
</div>
