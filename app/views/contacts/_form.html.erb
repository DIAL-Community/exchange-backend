<div class="card-body">
  <%= form_with(model: contact, local: true) do |form| %>
    <% if contact.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(contact.errors.count, "error") %>
          prohibited this contact from being saved:
        </h2>

        <ul>
          <% contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset class="form-label-group">
      <%= form.text_field :name, id: :contact_name, :class => "form-control", :placeholder => "Name" %>
      <%= form.label :name %>
    </fieldset>

    <fieldset class="form-label-group">
      <%= form.text_field :slug, id: :contact_slug, :class => "form-control", :placeholder => "Slug" %>
      <%= form.label :slug %>
    </fieldset>

    <fieldset class="form-label-group">
      <%= form.text_field :email, id: :contact_email, :class => "form-control", :placeholder => "Email" %>
      <%= form.label :email %>
    </fieldset>

    <fieldset class="form-label-group">
      <%= form.text_field :title, id: :contact_title, :class => "form-control", :placeholder => "Title" %>
      <%= form.label :title %>
    </fieldset>

    <fieldset class="float-right">
      <%= form.submit 'Submit', :class => "btn btn-primary" %>
      <%= link_to 'Back', "javascript:window.history.back()", :class => 'btn btn-outline-secondary' %>
    </div>
  <% end %>
</div>
