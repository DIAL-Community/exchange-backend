    <div class="container flex-center text-center">
        <div class="row mt-4">
        <div class="col-md-12 col-xl-8 mx-auto">
            <h1 class="display-3 font-weight-bold mb-2 text-white"><%= t('view.about.sdg_title') %></h1>
            <h3 class="text-white"><%= t('view.about.sdg_subtitle') %></h3>
            </h1>
        </div>
        </div>
    </div>
    </div>
