<% if @use_case.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t('view.general.error', count: @use_case.errors.count) %>
    </div>
  </div>
<% end %>
<div class="rounded bg-secondary text-white original-font-size p-3">
  <%= t('view.general.title.edit', model: t('model.use-case')) %>
</div>
<%= render 'form', use_case: @use_case %>
