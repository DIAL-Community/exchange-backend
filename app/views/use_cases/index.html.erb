<p class="text-success"><%= flash[:notice] %></p>
<p class="text-danger"><%= flash[:error] %></p>
<% if user_signed_in? && policy(UseCase).mod_allowed? %>
  <%= link_to t('view.general.create'), new_use_case_path, :class => 'btn btn-outline-secondary float-left ml-1' %>
<% end %>
<div class="float-right pb-2">
  <%= form_tag(use_cases_path, :method => "get", id: "search-form", class: "form-inline") do %>
    <%= text_field_tag :search, params[:search],
        placeholder: t('view.general.search-placeholder', model: t('model.use-case').to_s.pluralize),
        class: "form-control" %>
    <div class="input-group-append">
        <%= submit_tag t('view.general.search'), :class => "btn btn-secondary" %>
    </div>
    <% end %>
</div>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th><%= t('view.general.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @use_cases.count > 0 %>
      <% @use_cases.each do |use_case| %>
        <tr>
          <td><%= use_case.name %></td>
          <td class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button"
               aria-haspopup="true" aria-expanded="false">
               <%= t('view.general.action') %>
            </a>
            <div class="dropdown-menu">
              <%= link_to t('view.general.view'), use_case, :class =>"dropdown-item"  %>
              <% if user_signed_in? && policy(use_case).mod_allowed? %>
                <%= link_to t('view.general.edit'), edit_use_case_path(use_case), :class =>"dropdown-item"  %>
                <div class="dropdown-divider"></div>
                <%= link_to t('view.general.delete'), use_case, method: :delete, data: { confirm: t('view.general.delete-confirm') }, :class =>"dropdown-item"  %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4">
          <small class="text-muted"><%= t('view.use-case.index.no-data') %></small>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @use_cases, :class => "float-right digg-pagination" %>
