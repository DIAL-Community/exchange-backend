<p class="text-success"><%= flash[:notice] %></p>
<p class="text-danger"><%= flash[:error] %></p>

<div class="card">
  <div class="border rounded bg-secondary text-white clearfix border card-header">
    <h5 class="float-left mb-0">
      Use Case: <%= @use_case.name %>
    </h5>
  </div>
  <div class="card-body">
    <p class="card-subtitle text-muted mb-0" >
      <strong>Description: </strong><%= @useCaseJson.desc %>
    </p>
    <p class="card-subtitle text-muted mt-3" >
      <strong>Sector: </strong><%= @sector_name %>
    </p>
    <% if @useCaseJson.steps %>
    <p class="card-subtitle text-muted mt-3" ><strong>Steps for this Use Case include:</strong></p>
      <ul>
      <% @useCaseJson.steps.each do |step| %>
        <li class="text-muted"><%= step %>
      <% end %>
      </ul>
    <% end %>
    <p class="float-right mb-0" >
      <%= link_to 'Back', use_cases_path, :class => "card-link" %>
      <% if user_signed_in? && policy(@use_case).mod_allowed? %>
        <%= link_to 'Edit', edit_use_case_path(@use_case), :class => "card-link" %>
      <% end %>
    </p>
  </div>
</div>

<div class="mt-4">
  <div class="border rounded bg-secondary text-white clearfix border card-header">
    <h5 class="float-left mb-0">SDG Targets</h5>
  </div>
  <% if @use_case.sdg_targets.count > 0 %>
    <div class="row">
      <% @use_case.sdg_targets.order("target_number").each do |sdg_target| %>
        <div class="col-6 col-lg-4 mt-2">
          <div class="card h-100">
            <div class="card-body pb-2 pt-2">
              <p class="card-text mb-0" style="flex: 1"><%= sdg_target.target_number %></p>
              <p class="card-text text-muted mb-1" style="flex: 1"><%= sdg_target.name %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="card-text text-muted">We don't have any SDG target information for this Use Case.</p>
  <% end %>
</div>

<div class="mt-4">
  <div class="border rounded bg-secondary text-white clearfix border card-header">
    <h5 class="float-left mb-0">Workflows</h5>
  </div>
  <% if @use_case.workflows.count > 0 %>
    <div class="row">
      <% @use_case.workflows.order("name").each do |workflow| %>
        <div class="col-6 col-lg-4 mt-2">
          <div class="card h-100">
            <div class="card-body pb-2 pt-2">
              <p class="card-text text-muted mb-1" style="flex: 1"><%= link_to workflow.name, workflow %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="card-text text-muted">We don't have any Workflow information for this Use Case.</p>
  <% end %>
</div>
