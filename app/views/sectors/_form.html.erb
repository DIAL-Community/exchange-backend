<div class="card-body">
  <%= form_with(model: sector, local: true) do |form| %>
    <% if sector.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(sector.errors.count, "error") %> prohibited this sector from being saved:</h2>

        <ul>
        <% sector.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset class="form-label-group">
      <%= form.text_field :name, id: :sector_name%>
      <%= form.label :name %>
    </fieldset>

    <fieldset class="form-label-group">
      <%= form.text_field :slug, id: :sector_slug, :class => "form-control", :placeholder => "Slug" %>
      <%= form.label :slug %>
    </fieldset>

    <fieldset class="float-right">
      <%= form.submit 'Submit', :class => "btn btn-primary" %>
      <%= link_to 'Back', "javascript:window.history.back()", :class => 'btn btn-outline-secondary' %>
    </fieldset>
  <% end %>
</div>
