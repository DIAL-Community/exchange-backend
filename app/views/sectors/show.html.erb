<p id="notice"><%= notice %></p>
<div class="card">
  <h5 class="card-header bg-secondary text-white"><%= @sector.name %></h5>
  <div class="card-body">
    <p class="float-right mb-0" >
      <%= link_to 'Back', sectors_path, :class => "card-link" %>
      <%= link_to 'Edit', edit_sector_path(@sector), :class => "card-link" %>
    </p>
  </div>
</div>

<div class="mt-4">
  <div class="border rounded bg-secondary text-white clearfix border card-header">
    <h5 class="float-left mb-0">Organization</h5>
    <%= link_to 'Add', new_organization_path, :class => "card-link text-white float-right" %>
  </div>
  <% if @sector.organizations.count > 0 %>
    <div class="row">
      <% @sector.organizations.each do |organization| %>
        <div class="col-6 col-lg-4 mt-2">
          <div class="card h-100">
            <div class="card-body pb-1">
              <h5 class="card-title"><%= link_to organization.name, organization %></h5>
              <h6 class="card-subtitle text-muted mb-2"><%= organization.website %></h6>
            </div>
            <div class="card-footer text-muted p-2">
              <small>
                <%= link_to 'Edit', edit_organization_path(organization), :class => "card-link float-right" %>
              </small>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="card-text text-muted">We don't have any contact information for this organization.</p>
  <% end %>
</div>

<div class="mt-4">
  <div class="border rounded bg-secondary text-white clearfix border card-header">
    <h5 class="float-left mb-0">Use Cases</h5>
  </div>
  <% if @sector.use_cases.count > 0 %>
    <div class="row">
      <% @sector.use_cases.order("name").each do |use_case| %>
        <div class="col-6 col-lg-4 mt-2">
          <div class="card h-100">
            <div class="card-body pb-1">
              <p class="card-text text-muted mb-0" style="flex: 1"><%= link_to use_case.name, use_case %></p>
              <p class="card-text text-muted mb-0" style="flex: 1"><%= use_case.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="card-text text-muted">We don't have any Use Case information for this Sector.</p>
  <% end %>
</div>
