<% base_path = Rails.env.production? ? '/admin/' : '' %>
<div class="form-signin">

  <div class="text-center mb-4">
    <h2>Log in</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: base_path + session_path(resource_name)) do |f| %>
  <fieldset class="form-label-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => "Email" %>
    <%= f.label :email %>
  </fieldset>

  <fieldset class="form-label-group">
    <%= f.password_field :password, autocomplete: "current-password", :class => "form-control", :placeholder => "Password" %>
    <%= f.label :password %>
  </fieldset>

  <% if devise_mapping.rememberable? -%>
    <fieldset class="form-group form-check">
      <%= f.check_box :remember_me, :class => "form-check-input" %>
      <%= f.label :remember_me, :class => "form-check-label" %>
    </fieldset>
  <% end -%>

  <%= f.submit "Log in", :class => "btn btn-block btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
</div>
