<p class="text-success"><%= flash[:notice] %></p>
<p class="text-danger"><%= flash[:error] %></p>

<div class="row">
  <div class="col-12">
    <% if user_signed_in? && policy(Activity).mod_allowed? %>
      <%= link_to  t('view.general.delete-with-model', model: t('model.activity').titlecase), @page,
                  method: :delete, data: { confirm: t('view.general.delete-confirmation', model: t('model.activity')) },
                  class: 'btn btn-outline-secondary float-left' %>
    <% end %>
  </div>
</div>

<div id="show-activity">
<div class="card mt-2">
  <h5 class="card-header bg-light border-0 font-weight-bold">
    <%= "#{@page.name}" %>
  </h5>
  <div class="card-body py-2 px-3">
    <h6 class="card-text text-muted mt-2 mb-2">
      <%= t('view.playbook-page.index.contents') %>: 
    </h6>
    <div class="card-body py-2 px-3">
      <% @page_contents.each do |page_content| %>
        <%= @page_content.content.html_safe %>
      <% end %>
    </div>
    <h6 class="card-text text-muted mt-2 mb-2">
      <%= t('view.activity.index.phase') %>: 
    </h6>
    <p class="ml-4"><%= @page.phase %></p>
    <h6 class="card-text text-muted mt-2 mb-2">
      <%= t('view.activity.index.order') %>: <%= @page.order %>
    </h6>
    <div class="card mt-2">
      <div class="card-header border-0">
        <h5 class="float-left mb-0 font-weight-bold"><%= t('view.activity.index.media') %>:</h5>
      </div>
      <div class="card-body p-0">
        <% if !@page.media_url.nil? && !@page.media_url.empty? && !@page.media_url.equals('') %>
          <div class="ml-4 mt-2">
          <iframe src="<%= @page.media_url %>" width=800 height=450 allowfullscreen></iframe>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card mt-2">
      <div class="card-header border-0">
        <h5 class="float-left mb-0 font-weight-bold"><%= t('view.activity.index.question') %>:</h5>
      </div>
      <div class="card-body p-0">
        <% if !@question.nil? %>
          <div class="ml-4 mt-2">
          <strong>Question Text: </strong><%= @question.question_text %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card mt-2">
      <div class="card-header border-0">
        <h5 class="float-left mb-0 font-weight-bold"><%= t('view.activity.index.resources') %>:</h5>
      </div>
      <div class="card-body p-0">
        <% @page.resources.each do |resource| %>
          <div class="ml-4 mt-2">
          <strong><%= resource["name"] %>: </strong><%= resource["description"] %>
          </div>
          <div class="ml-5 mb-3">
          <a href="<%= resource["url"] %>"><%= resource["url"] %></a>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card mt-2">
      <div class="card-header border-0">
        <h5 class="float-left mb-0 font-weight-bold"><%= t('model.task').pluralize.titlecase %></h5>
        <% if user_signed_in? && policy(Playbook).mod_allowed? %>
          <%= link_to t('view.general.add'),
            new_playbook_activity_task_path(@playbook, @page),
            class: "card-link float-right", style: "color: #fbab18 !important" %>
        <% end %>
      </div>
    </div>
    <div class="card-footer border-0">
      <div class="float-right mb-0">
        <% if user_signed_in? && policy(Playbook).mod_allowed? %>
          <%= link_to t('view.general.edit'), edit_playbook_activity_path(@playbook, @page), class: "card-link" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
