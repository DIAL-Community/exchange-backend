* {
  margin: 0;
  padding: 0
}

.multi-hex-grid {
  display: flex;
  flex-wrap: wrap;
  width: 90%;
  margin: 0 auto;
  overflow: hidden;
  font-family: Raleway, sans-serif;
  list-style-type: none;
  padding-bottom: 4.4%
}

.multi-hex {
  position: relative;
  visibility: hidden;
  outline: 1px solid transparent;
  width: 20%
}

.multi-hex::after {
  content: "" !important;
  display: block;
  padding-bottom: 86.602%
}

.multi-hex-in {
  position: absolute;
  width: 96%;
  padding-bottom: 110.851%;
  margin: 0 2%;
  overflow: hidden;
  visibility: hidden;
  outline: 1px solid transparent;
  -webkit-transform: rotate3d(0, 0, 1, -60deg) skewY(30deg);
  -ms-transform: rotate3d(0, 0, 1, -60deg) skewY(30deg);
  transform: rotate3d(0, 0, 1, -60deg) skewY(30deg)
}

.multi-hex-in * {
  position: absolute;
  visibility: visible;
  outline: 1px solid transparent
}

.multi-hex-link {
  display: block;
  width: 100%;
  height: 100%;
  text-align: center;
  color: #fff;
  overflow: hidden;
  -webkit-transform: skewY(-30deg) rotate3d(0, 0, 1, 60deg);
  -ms-transform: skewY(-30deg) rotate3d(0, 0, 1, 60deg);
  transform: skewY(-30deg) rotate3d(0, 0, 1, 60deg)
}

.multi-hex img {
  left: -100%;
  right: -100%;
  width: auto;
  height: 100%;
  margin: 0 auto;
  -webkit-transform: rotate3d(0, 0, 0, 0deg);
  -ms-transform: rotate3d(0, 0, 0, 0deg);
  transform: rotate3d(0, 0, 0, 0deg)
}

.multi-hex-grid h3 {
  margin-bottom: 0 !important
}

.multi-hex h3,
.multi-hex p {
  width: 100%;
  padding: 5%;
  box-sizing: border-box;
  background-color: rgba(0, 128, 128, .8);
  font-weight: 300;
  -webkit-transition: -webkit-transform .2s ease-out, opacity .3s ease-out;
  transition: transform .2s ease-out, opacity .3s ease-out
}

.multi-hex h3 {
  bottom: 50%;
  padding-top: 50%;
  z-index: 1;
  -webkit-transform: translate3d(0, -100%, 0);
  -ms-transform: translate3d(0, -100%, 0);
  transform: translate3d(0, -100%, 0)
}

.multi-hex h3::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 45%;
  width: 10%;
  text-align: center;
  border-bottom: 1px solid #fff
}

.multi-hex p {
  top: 50%;
  padding-bottom: 50%;
  -webkit-transform: translate3d(0, 100%, 0);
  -ms-transform: translate3d(0, 100%, 0);
  transform: translate3d(0, 100%, 0)
}

.multi-hex-link:focus h3,
.multi-hex-link:focus p,
.multi-hex-link:hover h3,
.multi-hex-link:hover p {
  -webkit-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0)
}

.multi-hex:nth-child(9n+6) {
  margin-left: 10%
}

.multi-hex:nth-child(1) *,
.multi-hex:nth-child(2) *,
.multi-hex:nth-child(4) *,
.multi-hex:nth-child(5) * {
  visibility: hidden
}

.multi-hex:nth-child(10) *,
.multi-hex:nth-child(12) *,
.multi-hex:nth-child(14) *,
.multi-hex:nth-child(19) *,
.multi-hex:nth-child(20) * {
  visibility: hidden
}

