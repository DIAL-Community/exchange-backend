<% if @workflow.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t('view.general.error', count: @workflow.errors.count) %>
    </div>
  </div>
<% end %>
<div class="border rounded bg-secondary text-white p-3 original-font-size">
  <%= t('view.general.title.create', model: t('model.workflow')) %>
</div>
<%= render 'form', workflow: @workflow %>
