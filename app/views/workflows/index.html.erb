<p id="notice"><%= notice %></p>

<%= link_to 'Create New', new_workflow_path, :class => 'btn btn-outline-secondary float-left ml-1' %>
<div class="float-right pb-2">
  <%= form_tag(workflows_path, :method => "get", id: "search-form", class: "form-inline") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search workflows ...", :class => "form-control" %>
    <div class="input-group-append">
        <%= submit_tag "Search", :class => "btn btn-secondary" %>
    </div>
    <% end %>
</div>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @workflows.count > 0 %>
      <% @workflows.each do |workflow| %>
        <tr>
          <td><%= workflow.name %></td>
          <td class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Action</a>
            <div class="dropdown-menu">
              <%= link_to 'View', workflow, :class =>"dropdown-item"  %>
              <%= link_to 'Edit', edit_workflow_path(workflow), :class =>"dropdown-item"  %>
              <div class="dropdown-divider"></div>
              <%= link_to 'Delete', workflow, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"dropdown-item"  %>
            </div>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4">
          <small class="text-muted">
            We couldn't find a workflow matching the search phrase. Do you want to <%= link_to 'create a new workflow?', new_workflow_path %>
          </small>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @workflows, :class => "apple-pagination" %>
