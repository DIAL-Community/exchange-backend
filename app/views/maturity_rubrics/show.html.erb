<% base_path = Rails.env.production? ? '/admin/' : '' %>
<p class="text-success"><%= flash[:notice] %></p>
<p class="text-danger"><%= flash[:error] %></p>

<div class="row">
  <div class="col-12">
    <% if user_signed_in? && policy(MaturityRubric).mod_allowed? %>
      <%= link_to  t('view.general.delete-with-model', model: t('model.maturity-rubric').titlecase), base_path+maturity_rubric_path(@maturity_rubric),
                  method: :delete, data: { confirm: t('view.general.delete-confirmation', model: t('model.maturity-rubric')) },
                  class: 'btn btn-outline-secondary float-left' %>
    <% end %>
  </div>
</div>

<div id="show-maturity-rubric">
  <%= render @maturity_rubric %>
</div>
