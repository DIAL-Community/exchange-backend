<p class="text-success"><%= flash[:notice] %></p>
<p class="text-danger"><%= flash[:error] %></p>

<div class="row">
  <div class="col-6">
    <% if user_signed_in? && policy(BuildingBlock).mod_allowed? %>
      <%= link_to t('view.general.create'), new_building_block_path, :class => 'btn btn-outline-secondary float-left ml-1' %>
    <% end %>
  </div>
</div>

<div class="row">
  <% if @building_blocks.count > 0 %>
    <% @building_blocks.each do |building_block| %>
      <div class="col-lg-5ths col-md-4 d-flex align-items-stretch mt-2">
        <div class="card index-card">
          <div class="card-header bg-secondary text-white small">
            <%= link_to truncate(building_block.name, length: 23, omission: '&hellip;', escape: false), building_block,
                'title' => building_block.name, 'data-toggle' => 'tooltip', 'data-placement' => 'top' %>
          </div>
          <div class="model-logo">
            <%= link_to(building_block) do %>
              <%= image_tag(building_block.image_file, class: 'card-img-top align-middle') %>
            <% end %>
          </div>

          <div class="card-footer">
            <small>
              <div class="row">
                <div class="col-12">
                  <%= "#{building_block.products.size} #{t('model.product').to_s.pluralize(building_block.products.size)}" %>,
                </div>
                <div class="col-12">
                  <%= "#{building_block.workflows.size}  #{t('model.workflow').to_s.pluralize(building_block.workflows.size)}" %>
                </div>
              </div>
            </small>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
