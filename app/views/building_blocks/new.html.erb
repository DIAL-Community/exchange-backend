<% if @building_block.errors.any? %>
  <div id="error_explanation">
    <div id="error_explanation">
      <% if @building_block.errors.include?(:duplicate) %>
        <div class="alert alert-warning">
          The form contains
          <%= pluralize(@building_block.errors.count, "warning") %>.
        </div>
      <% else %>
        <div class="alert alert-danger">
          The form contains
          <%= pluralize(@building_block.errors.count, "error") %>.
        </div>
      <% end %>
    </div>
  </div>
<% end %>
<div class="card">
  <h5 class="card-header">
    Create building block
  </h5>
  <%= render 'form', building_block: @building_block %>
</div>
