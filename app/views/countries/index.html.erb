<% base_path = Rails.env.production? ? '/admin/' : '' %>
<div class="form-group float-right my-2">
  <% if user_signed_in? && policy(Country).mod_allowed? %>
    <%= link_to base_path + new_country_path, class: 'btn btn-outline-secondary float-left ml-1' do %>
      <span class="d-none d-md-block"><%= t('view.general.create') %></span>
      <span class="d-block d-md-none">
        <i class="fa fa-plus fa-sm" aria-hidden="true"></i>
      </span>
    <% end %>
  <% end %>
  <%= form_tag(countries_path, method: "get", id: "search-form", class: "form-inline") do %>
    <%= text_field_tag :search, params[:search], class: "form-control",
        placeholder: t('view.general.search-placeholder', model: t('model.country').to_s.pluralize) %>
    <div class="input-group-append">
      <%= submit_tag t('view.general.search'), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th><%= t('view.general.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @countries.count > 0 %>
      <% @countries.each do |country| %>
        <tr>
          <td><%= country.name %></td>
          <td class="nav-item dropdown">
            <%= link_to t('view.general.view'), country, :class =>"dropdown-item" %>
            <% if user_signed_in? && policy(country).mod_allowed? %>
              <%= link_to t('view.general.edit'), base_path + edit_country_path(country), :class =>"dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to t('view.general.delete'), base_path + country_path(country), method: :delete,
                          data: { confirm: t('view.general.delete-confirmation', model: t('model.country')) },
                          class: "dropdown-item" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4">
          <small class="text-muted"><%= t('view.country.index.no-data') %></small>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @countries, class: 'float-right digg-pagination', inner_window: 1 %>
