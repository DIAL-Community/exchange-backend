<%
  hidden_class = 'd-none d-md-block'
  if (context == 'top-summary' && index < max_nav) ||
     (context == 'drop-summary' && index >= max_nav)
    hidden_class = 'd-block'
  end
%>

<div class="list-group-item w-100 text-center bg-transparent <%= hidden_class %>">
  <%= link_to use_cases_path do %>
    <%
      btn_class = 'btn-secondary'
      if current_page?(:controller => 'use_cases', :action => 'index')
        btn_class = 'btn-warning'
      end
    %>
    <span class="w-100 btn <%= btn_class %>">
      <div class="inline" data-toggle="tooltip" data-placement="bottom" data-original-title="<%= t('model.use-case').titlecase.pluralize %>">
        <%= image_tag "use_cases_icon.png", :width => "20px", :height => "20px",
                    alt: t('alt.el-icon', el: t('model.use-case')).humanize %>
      </div>
      <span class="display-text-on-xl">
        <%= t('model.use-case').titlecase.pluralize %>
      </span>
      <span class="use-case-badge badge badge-light">--</span>
    </span>
  <% end %>
</div>
