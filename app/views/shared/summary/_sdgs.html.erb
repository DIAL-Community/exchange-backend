<%
  hidden_class = 'd-none d-md-block'
  if (context == 'top-summary' && index < max_nav) ||
     (context == 'drop-summary' && index >= max_nav)
    hidden_class = 'd-block'
  end
%>

<div class="list-group-item w-100 text-center bg-transparent <%= hidden_class %>">
  <%= link_to sustainable_development_goals_path do %>
    <%
      btn_class = 'btn-secondary'
      if current_page?(:controller => 'sustainable_development_goals', :action => 'index')
        btn_class = 'btn-warning'
      end
    %>
    <span class="w-100 btn <%= btn_class %>">
      <%= image_tag "sdgs_icon.png", :width => "20px", :height => "20px" %>
      <span class="d-none d-xl-inline-block">
        <%= t('model.sdg').upcase.pluralize %>
      </span>
      <span class="sdg-badge badge badge-light">--</span>
    </span>
  <% end %>
</div>
