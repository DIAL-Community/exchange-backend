<%
  hidden_class = 'd-none d-md-block'
  if (context == 'top-summary' && index < max_nav) ||
     (context == 'drop-summary' && index >= max_nav)
    hidden_class = 'd-block'
  end
%>

<div class="list-group-item w-100 text-center bg-transparent <%= hidden_class %>">
  <%= link_to products_path do %>
    <%
      btn_class = 'btn-secondary'
      if current_page?(:controller => 'products', :action => 'index')
        btn_class = 'btn-warning'
      end
    %>
    <span class="w-100 btn <%= btn_class %>">
      <%= image_tag "products_icon.png", :width => "20px", :height => "20px" %>
      <span class="display-text-on-xl">
        <%= t('model.product').titlecase.pluralize %>
      </span>
      <span class="product-badge badge badge-light">--</span>
    </span>
  <% end %>
</div>
