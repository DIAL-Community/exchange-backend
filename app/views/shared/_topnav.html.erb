<div id="header-outer" data-turbolinks-permanent>
  <div id="header-widget">
    <nav id="header" class="navbar navbar-expand-lg navbar-dark fixed-top">
      <div class="container-fluid">
        <% if session[:portal]["slug"] == "default" %>
          <a href="/products">
            <%= image_tag "logo-dial.png", :alt => "DIAL Logo", :height => "86px" %>
          </a>
        <% else %>
          <%= image_tag "/assets/portal_views/"+session[:portal]["slug"]+".png", :alt => "DIAL Logo", :height => "86px" %>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown mt-2">
              <strong><%= link_to t('view.header.covid-resources'),covid_index_path, :class => 'nav-link' %></strong>
            </li>
            <% if user_signed_in? %>
              <% if (policy(current_user).index?) %>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle mt-2" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                     aria-haspopup="true" aria-expanded="false">
                    <strong><%= t('view.header.admin-data') %></strong>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <%= link_to t('model.contact').to_s.pluralize.titlecase, contacts_path, :class => 'dropdown-item' %>
                    <%= link_to t('model.location').to_s.pluralize.titlecase, locations_path, :class => 'dropdown-item' %>
                    <%= link_to t('model.project').to_s.pluralize.titlecase, projects_path, :class => 'dropdown-item' %>
                    <%= link_to t('model.sector').to_s.pluralize.titlecase, sectors_path, :class => 'dropdown-item' %>
                    <%= link_to t('model.tag').to_s.pluralize.titlecase, tags_path, :class => 'dropdown-item' %>
                    <%= link_to t('model.user').to_s.pluralize.titlecase, users_path, :class => 'dropdown-item' %>
                    <div class="dropdown-divider"></div>
                    <%= link_to t('model.candidate-organization').to_s.pluralize.titlecase, candidate_organizations_path, :class => 'dropdown-item' %>
                    <% if (policy(current_user).mni?) %>
                      <%= link_to t('model.operator_services').to_s.pluralize.titlecase, operator_services_path, :class => 'dropdown-item' %>
                    <% end %>
                    <%= link_to t('model.product-suite').to_s.pluralize.titlecase, product_suites_path, :class => 'dropdown-item' %>
                    <div class="dropdown-divider"></div>
                    <%= link_to t('model.deploys').to_s.pluralize.titlecase, deploys_path, :class => 'dropdown-item' %>
                    <%= link_to t('model.portal-view').to_s.pluralize.titlecase, portal_views_path, :class => 'dropdown-item' %>
                  </div>
                </li>
              <% elsif (policy(current_user).mni?) %>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle mt-2" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <strong><%= t('view.header.mni-data') %></strong>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                      <%= link_to t('model.operator_services').to_s.pluralize.titlecase, operator_services_path, :class => 'dropdown-item' %>
                  </div>
                </li>
              <% elsif (policy(current_user).ict4sdg?) %>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle mt-2" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <strong><%= t('view.header.ict4sdg-data') %></strong>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <%= link_to t('model.project').to_s.pluralize.titlecase, projects_path, :class => 'dropdown-item' %>
                    <%= link_to t('model.sector').to_s.pluralize.titlecase, sectors_path, :class => 'dropdown-item' %>
                  </div>
                </li>
              <% elsif (policy(current_user).principle?) %>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle mt-2" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <strong><%= t('view.header.principle-data') %></strong>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <%= link_to t('model.contact').to_s.pluralize.titlecase, contacts_path, :class => 'dropdown-item' %>
                    <%= link_to t('model.location').to_s.pluralize.titlecase, locations_path, :class => 'dropdown-item' %>
                    <%= link_to t('model.sector').to_s.pluralize.titlecase, sectors_path, :class => 'dropdown-item' %>
                  </div>
                </li>
              <% end %>
              <%= render '/shared/menu/authenticated' %>
            <% else %>
              <%= render '/shared/menu/unauthenticated' %>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</div>
