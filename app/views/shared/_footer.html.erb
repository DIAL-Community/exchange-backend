            <a
              href='https://gitlab.com/dial/osc/eng/t4d-online-catalog/product-registry'
              target='_blank' rel='noreferrer'
              class='border-b-2 border-transparent hover:border-dial-teal-light'
            >
              <%= t('view.footer.privacy-policy') %>
            </a>
          </div>
          <div class='py-2 px-3 rounded bg-dial-gray-light mr-4'>
            <a
              href='https://gitlab.com/dial/osc/eng/t4d-online-catalog/product-registry'
              target='_blank' rel='noreferrer'
              class='border-b-2 border-transparent hover:border-dial-teal-light'
