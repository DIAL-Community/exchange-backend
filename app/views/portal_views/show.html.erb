<% base_path = Rails.env.production? ? '/admin/' : '' %>
<p class="text-success"><%= flash[:notice] %></p>
<p class="text-danger"><%= flash[:error] %></p>
<div class="card">
  <div class="card-header bg-secondary text-white">
    <%= "#{t('model.portal-view').to_s.titlecase}: #{@portal_view.name}" %>
  </div>
  <div class="card-body py-2">
    <div class="card-text text-muted mt-2 mb-2">
      <strong><%= t('view.general.description') %>:</strong>
      <%= @portal_view.description %> 
    </div>
    <div class="card-text text-muted mt-2 mb-2">
      <strong><%= t('view.portal.form.subdomain') %>:</strong>
      <%= @portal_view.subdomain %> 
    </div>
    <div class="float-right" >
      <%= link_to t('view.general.back'), base_path + portal_views_path, :class => "card-link" %>
      <% if user_signed_in? && policy(@portal_view).mod_allowed? %>
        <%= link_to t('view.general.edit'), base_path + edit_portal_view_path(@portal_view), :class => "card-link" %>
      <% end %>
    </div>
  </div>
</div>

<div class="mt-4">
  <div class="rounded bg-secondary text-white card-header">
    <%= t('view.portal-view.top-nav').to_s.pluralize.titlecase %>
  </div>
  <% if @portal_view.top_navs.count > 0 %>
    <div class="row">
      <% @portal_view.top_navs.each do |top_nav| %>
        <div class="col-6 col-lg-4 mt-2">
          <div class="card h-100">
            <div class="card-body p-2">
              <div class="m-0"><%= I18n.translate("view.filternav.#{top_nav}") %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="card-text text-muted">
      <%= t('view.general.not-available', model: t('model.portal-view'), multi: t('view.portal-view.top-nav').to_s.pluralize) %>
    </p>
  <% end %>
</div>

