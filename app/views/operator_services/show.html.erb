<p id="notice"><%= notice %></p>
<div class="card">
  <div class="card-header bg-secondary text-white">
    Operator: <%= @operator_name %>
  </div>
  <div class="card-body">
    <p class="float-right mb-0 mr-2" >
      <%= link_to t('view.general.back'), operator_services_path, :class => "card-link" %>
      <% if user_signed_in? && policy(@curr_operator).mod_allowed? %>
        <%= link_to 'Edit', edit_operator_service_path(@curr_operator.name), :class => "card-link" %>
      <% end %>
    </p>
  </div>
</div>

<div class="mt-2">
  <div class="rounded bg-secondary text-white card-header">
    <%= t('model.location').to_s.pluralize.humanize %>
  </div>
  <% if @operator_countries.count > 0 %>
    <div class="row mb-2">
      <% @operator_countries.order("name").each do |country| %>
        <div class="col-6 col-lg-4 mt-2">
          <div class="card h-100">
            <div class="card-body py-2">
              <p class="card-text text-muted" style="flex: 1"><%= country.name %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
