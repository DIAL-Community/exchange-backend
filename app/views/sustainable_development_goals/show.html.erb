<p class="text-success"><%= flash[:notice] %></p>
<p class="text-danger"><%= flash[:error] %></p>
<div class="card">
  <h5 class="card-header bg-secondary text-white"><%= @sustainable_development_goal.name %></h5>
  <div class="card-body">
    <div class="row">
      <% if @sustainable_development_goal.sdg_targets.count > 0 %>
          <% @sustainable_development_goal.sdg_targets.each do |sdg_target| %>
            <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-3">
              <div class="card">
                <div class="card-header bg-secondary text-white">
                  <%= "#{t('view.sdg.show.target')}: #{sdg_target.target_number}" %>
                </div>
                <div class="card-body">
                  <%= sdg_target.name %>
                </div>
              </div>
            </div>
          <% end %>
      <% end %>
    </div>
    <p class="float-right mb-0" >
      <%= link_to t('view.general.back'), sustainable_development_goals_path, :class => "card-link" %>
    </p>
  </div>
</div>

<div class="mt-4">
  
</div>
