      <div class="row">
        <div class="col-12">
          <span id="base-selected-countries" class="selected-element badge badge-secondary px-1 mb-1">
            <span class="text-label"></span>
            <a onclick="remove(this);" style="cursor: pointer;">
              <i class="fas fa-trash-alt"></i>
            </a>
            <input type="hidden"/>
          </span>
        </div>
      </div>
      <div class="mt-4">
        <div class="border rounded bg-secondary text-white clearfix border card-header">
          <h5 class="float-left mb-0"><%= t('model.operator_services').to_s.pluralize.humanize %></h5>
        </div>
        <div id="orgId" style="display:none"><%= @organization.id %></div>
        <div id="agg-nav" class="card-body p-2 col-6 col-lg-4 mt-2 ml-4 accordion-section ">
          <div class="mni-accordion">
            <% @organization.locations.each do |country| %>
              <h3 class="country-list" id="<%= country.id %>"><%= country.name %></h3>
              <div>
                <div class="mni-accordion">
                  <% @core_services.each do |service| %>
                    <h3 class="country-service" id="<%= country.id %>_<%= service %>"><%= service %></h3>
                    <div class="capability">
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <fieldset class="float-right mt-4">
      <%= form.submit t('view.general.submit'), :class => "btn btn-primary" %>
      <%= link_to t('view.general.back'), "javascript:window.history.back()", :class => 'btn btn-outline-secondary' %>
    </fieldset>
  <% end %>

<script>
  <% organization.sectors.order("name").each do |sector| %>
    addSector('<%= sector.id %>', '<%= sector.name %>');
  <% end %>
  <% organization.products.order("name").each do |product| %>
    addProduct('<%= product.id %>', '<%= product.name %>');
  <% end %>
  <% organization.projects.order("name").each do |project| %>
    addProject('<%= project.id %>', '<%= project.name %>');
  <% end %>
  <% organization.locations.where.not(location_type: 'point').order("name").each do |location| %>
    addLocation('<%= location.id %>', '<%= location.name %>');
  <% end %>
  <% organization.locations.where(location_type: 'point').order("name").each do |location| %>
    addOffice('<%= location.name %>', '<%= location.id %>', null);
  <% end %>
  <% organization.organizations_contacts.joins(:contact).where('ended_at is null').order('contacts.name').each do |organizations_contact| %>
    addContact('<%= organizations_contact.contact.id %>', '<%= organizations_contact.contact.name %>');
  <% end %>

  var editor = setUpEditor(<%= raw JSON.generate(@organization_description.description) %>, '<%= t('view.organization.form.description-placeholder') %>');
  var form = document.querySelector('#organization-form');
  form.onsubmit = function() {
    var organizationDescription = $('#organization_description');
    organizationDescription.val(JSON.stringify(editor.getContents()));
  };
</script>
