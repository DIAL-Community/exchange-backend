<p id="notice"><%= notice %></p>
<div class="border rounded bg-secondary text-white clearfix border card-header">
  <h5 class="float-left mb-0">
    Organization: <%= @organization.name %>
    <% if @organization.is_endorser %>
      <i class="fas fa-check-circle text-success ml-2"></i>
    <% end %>
  </h5>
  <%= link_to 'Edit', edit_organization_path(@organization), :class => "card-link text-white float-right" %>
</div>

<div class="mt-2">
  <div class="row">
    <div class="col-lg-4 col-12">
      <% if @organization.locations.find{|location| location.location_type == 'point'} %>
        <div id="office" style="max-height: 28rem;"></div>
        <div id="office-popup" class="office-popup"></div>
      <% end %>
    </div>
    <div class="col-lg-8 col-12">
      <p class="m-2">
        <strong>Endorsed on:</strong>
        <%= @organization.when_endorsed.nil? ? '' : @organization.when_endorsed.strftime("%m/%d/%Y") %>
      </p>
      <p class="m-2">
        <strong>Website:</strong>
        <%= link_to @organization.website.downcase.strip, @organization.website.downcase.strip %>
      </p>
    </div>
  </div>
</div>

<div class="mt-4">
  <div class="border rounded bg-secondary text-white clearfix border card-header">
    <h5 class="float-left mb-0">Contacts</h5>
    <%= link_to 'Add', new_organization_contact_path(@organization) , :class => "card-link text-white float-right" %>
  </div>
  <% if @organization.contacts.count > 0 %>
    <div class="row">
      <% @organization.contacts.order("name").each do |contact| %>
        <div class="col-6 col-lg-4 mt-2">
          <div class="card h-100">
            <div class="card-body pb-1">
              <h5 class="card-title"><%= link_to contact.name, contact %></h5>
              <h6 class="card-subtitle text-muted mb-2"><%= contact.email %></h6>
              <% if contact.title %>
                <p class="card-text"><%= contact.title %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="card-text text-muted">We don't have any contact information for this organization.</p>
  <% end %>
</div>

<div class="mt-4">
  <div class="border rounded bg-secondary text-white clearfix border card-header">
    <h5 class="float-left mb-0">Sectors</h5>
    <%= link_to 'Add', new_organization_sector_path(@organization), :class => "card-link text-white float-right" %>
  </div>
  <% if @organization.sectors.count > 0 %>
    <div class="row">
      <% @organization.sectors.order("name").each do |sector| %>
        <div class="col-6 col-lg-4 mt-2">
          <div class="card h-100">
            <div class="card-body pb-2 pt-2">
              <p class="card-text text-muted mb-0" style="flex: 1"><%= link_to sector.name, sector %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="card-text text-muted">We don't have any sector information for this organization.</p>
  <% end %>
</div>


<div class="mt-4">
  <div class="border rounded bg-secondary text-white clearfix border card-header">
    <h5 class="float-left mb-0">Products</h5>
    <%= link_to 'Add', new_product_path, :class => "card-link float-right text-white" %>
  </div>
  <% if @organization.products.count > 0 %>
    <div class="row">
      <% @organization.products.each do |product| %>
        <div class="col-6 col-lg-2 mt-2">
          <div class="card">
            <h5 class="card-header"><%= product.name %></h5>
            <div class="card-body snug">
              <%= link_to product do %>
                <%= image_tag(product.image_file, width: 50, class: 'card-img-top align-middle') %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="card-text text-muted">We don't have any includes information for this product.</p>
  <% end %>
</div>

<div class="mt-4">
  <div class="border rounded bg-secondary text-white clearfix border card-header">
    <h5 class="float-left mb-0">Countries</h5>
    <%= link_to 'Add', new_organization_location_path(@organization), :class => "card-link text-white float-right" %>
  </div>
  <% if @organization.locations.select{|location| location.location_type != 'point'}.count > 0 %>
    <div class="row">
      <% @organization.locations.where.not(location_type: 'point').order("name").each do |country| %>
        <div class="col-6 col-lg-4 mt-2">
          <div class="card h-100">
            <div class="card-body pb-2 pt-2">
              <p class="card-text text-muted mb-0" style="flex: 1"><%= link_to country.name, country %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="card-text text-muted">We don't have any sector information for this organization.</p>
  <% end %>
</div>

<script>
  <%
    office = @organization.locations.find{|location| location.location_type == 'point'}
    if (office)
  %>
    function updateMapMarker() {
      setOfficeMarker('<%= @organization.name %>', '<%= office.name %>', '<%= office.points[0][1] %>', '<%= office.points[0][0] %>');
    }

    $(document).on('organizations#show:loaded', updateMapMarker)
  <% end %>
</script>
