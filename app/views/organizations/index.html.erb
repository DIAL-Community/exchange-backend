<p id="notice">
  <%= notice %>
</p>

<%= link_to "Export", export_path, :class => 'btn btn-outline-secondary float-left ml-1', target: "_blank" %>
<%= link_to 'Create New', new_organization_path %>
<div class="float-right pb-2">
  <%= form_tag(organizations_path, :method => "get", id: "search-form", class: "form-inline") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search organizations ...", :class => "form-control" %>
  <div class="input-group-append">
    <%= submit_tag "Search", :class => "btn btn-primary" %>
  </div>
<% end %>
</div>
<br clear="both"/>

<% @organizations.each_slice(4) do |organization_row| %>
<div class="card-deck">
<% organization_row.each do |organization| %>
  <div class="card">
    <div class="card-header">
      <small><%= link_to organization.name, organization %></small>
    </div>
    <%= image_tag(organization.image_file, width: 200, class: 'card-img-top align-middle') %>
    <div class="card-body">

      <p class="card-text"><small><a href="<%= organization.website %>" target="_new"><%= organization.website %> &#x29c9;</a></small>
    </div>
    <% if organization.is_endorser %>
      <div class="card-footer">
        <small class="text-muted"><%= image_tag('digiprins.png', width: 16) %> Endorser since <%= organization.when_endorsed.year %></small>
      </div>
    <% end %>
  </div>
  <% if organization_row.size < 4  %>
    <% (4 - organization_row.size).times do |x| %>
      <div class="card card-placeholder">
      </div>
    <% end %>
  <% end %>
<% end %>
</div>
<% end %>
