<p class="text-success"><%= flash[:notice] %></p>
<p class="text-danger"><%= flash[:error] %></p>

<% if user_signed_in? && policy(Organization).mod_allowed? %>
  <%= link_to 'Create New', new_organization_path, :class => 'btn btn-outline-secondary float-left ml-1' %>
<% end %>
<%= form_with(url: export_path, :method => :get, :data => {remote: false}, :class => 'inline-form'  ) do | form | %>
  <%= form.hidden_field :export_contacts, :value => false %>
  <%= form.submit 'Export', :class => 'btn btn-outline-secondary float-left ml-1', data: { disable_with: false } %>
  <% if user_signed_in? && policy(Organization).export_contacts_allowed? %>
    <fieldset class="form-group form-check">
      <%= form.check_box :export_contacts, {}, true, false %>
      <label class="form-label-group text-muted mt-2" for="is_approved">Export with contacts info</label>
    </fieldset>
  <% end %>
<% end %>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#filter-dialog">
  Filter
</button>
<%= render 'filter' %>
<br clear="both"/>

<div class="row">
  <% @organizations.each do |organization| %>
    <div class="col-lg-2 col-md-4 d-flex align-items-stretch mt-2">
      <div class="card index-card">
        <div class="card-header bg-secondary text-white small">
          <%= link_to truncate(organization.name, length: 23, omission: '&hellip;', escape: false), organization,
              'title' => organization.name, 'data-toggle' => 'tooltip', 'data-placement' => 'top' %>
        </div>
        <%= image_tag(organization.image_file, width: 200, class: 'card-img-top align-middle') %>
        <% if organization.is_endorser %>
          <div class="card-footer">
            <% if organization.website.present? %>
              <small>
                <a href="<%= "//" + organization.website %>" target="_new">
                   website &#x29c9;
                </a>
              </small><br/>
            <% end %>
            <small class="text-muted">
              <%= image_tag('digiprins.png', width: 16) %> Endorsed in <%= organization.when_endorsed.year %>
            </small>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

